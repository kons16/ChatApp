<div id='sign_login_page_back'>
  <div style="text-align: center;">
    <h1>新規登録</h1>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <div class='row'>
          <%= f.label :ユーザーネーム %><br />
          <div class='col-xs-4 col-md-offset-4'>
            <%= f.text_field :name, autofocus: true, placeholder: '', :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class='form-group'>
        <div class='row'>
          <%= f.label :ID %>(<em>他ユーザーがあなたを検索するのに使用します</em>) <br />
          <div class='col-xs-4 col-md-offset-4'>
            <%= f.text_field :search_id, autofocus: true, placeholder: '', :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class='row'>
          <%= f.label :メールアドレス %><br />
          <div class='col-xs-4 col-md-offset-4'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class='row'>
          <%= f.label :・パスワード %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <div class='col-xs-4 col-md-offset-4'>
            <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class='row'>
          <%= f.label :確認パスワード %><br />
          <div class='col-xs-4 col-md-offset-4'>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", :class => 'form-control' %>
          </div>
        </div>
      </div>

      <br><br>
      <div class="actions">
        <%= f.submit "新規登録", :class => 'btn btn-primary col-xs-2 col-md-offset-5'%>
      </div>
    <% end %>
  </div>
</div>
