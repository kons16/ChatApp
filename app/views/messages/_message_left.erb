<div id="messages_box">
  <div if="chat_user_icon">
    <% if User.find(message.user_id).icon.to_s != "" %>
      <%= image_tag User.find(message.user_id).icon.to_s, id: "chat_room_icon" %>
    <% else %>
      <%= image_tag "/image/person.png", id: "chat_room_icon" %>
    <% end %>
  </div>

  <% if message.context == "image_not_null" %>
    <div id="chat_message"><%= image_tag message.image.to_s %></div>
  <% else %>
    <div id="chat_message"><%= message.context %></div>
  <% end %>
</div>
<br>
